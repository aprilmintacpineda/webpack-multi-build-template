{
  "name": "multiple-builds-with-webpack",
  "version": "1.0.0",
  "description": "This repository serves as a demonstration and also a template for projects that require different builds for different environments using webpack.",
  "main": "index.js",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-flow"
    ],
    "plugins": [
      "babel-plugin-inferno",
      "@babel/plugin-syntax-jsx",
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "scripts": {
    "reinstallNodeModules": "rm -rf node_modules package-lock.json && npm i",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf builds && babel-node node_modules/webpack-cli/bin/cli.js --config webpack/build && npm run filesizes",
    "start": "babel-node node_modules/.bin/webpack-dev-server --config webpack/start.js",
    "serve:web": "http-server builds/web",
    "serve": "http-server builds",
    "filesizes": "babel-node webpack/filesizes.js",
    "eslint": "eslint \"src/**/*.js\" --fix",
    "prettier": "prettier \"src/**/*.{js,scss}\" --write",
    "lint": "npm run prettier && npm run eslint"
  },
  "author": "April Mintac Pineda",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.4.2",
    "inferno": "^6.1.3",
    "inferno-async-component": "^1.1.3",
    "inferno-router": "^6.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-jsx": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-inferno": "^6.0.2",
    "chalk": "^2.4.1",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "dotenv": "^6.1.0",
    "eslint": "^5.8.0",
    "eslint-plugin-inferno": "^7.11.0",
    "file-loader": "^2.0.0",
    "gzip-size": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "inline-chunks-html-webpack-plugin": "^1.3.1",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.3.0",
    "prettier": "^1.14.3",
    "prettier-stylelint": "^0.4.2",
    "sass-loader": "7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-loader-clean-pragma": "^1.0.1"
  }
}
